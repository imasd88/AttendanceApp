<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#347703"
    android:orientation="vertical"
    android:weightSum="3" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="2.6"
        android:background="@drawable/layout_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btn1"
            android:layout_below="@+id/sp1"
            android:layout_marginTop="15dp"
            android:text="Button 2:"
            android:background="@drawable/layout_btn_bg" />

        <TextView
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btn2"
            android:layout_below="@+id/sp2"
            android:layout_marginTop="15dp"
            android:text="Button 3:"
            android:background="@drawable/layout_btn_bg" />

        <Spinner
            android:id="@+id/sp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn3"
            android:layout_toRightOf="@+id/btn3"
            android:background="@drawable/layout_tv_bg" />

        <TextView
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btn3"
            android:layout_below="@+id/sp3"
            android:layout_marginTop="15dp"
            android:text="Button 4:"
            android:background="@drawable/layout_btn_bg" />

        <Spinner
            android:id="@+id/sp4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn4"
            android:layout_toRightOf="@+id/btn4" 
            android:background="@drawable/layout_tv_bg"/>

        <Spinner
            android:id="@+id/sp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sp1"
            android:layout_below="@+id/btn2" 
            android:background="@drawable/layout_tv_bg"/>

        <android.widget.Spinner
            android:id="@+id/sp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1"
            android:layout_toRightOf="@+id/btn1" 
            android:background="@drawable/layout_tv_bg"/>

        <TextView
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_btn_bg"
            android:text="Button 1:" />

        <Button
            android:id="@+id/doneBtnBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/layout_btn_bg"
            android:text="@string/done" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical" >
    </RelativeLayout>

</LinearLayout>